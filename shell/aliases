# vim:syntax=sh

# ls
alias ls='ls --color=auto'
alias l='ls -C -F'
alias ll='l -lh'
alias la='l -a'
alias l1='ls -1'
alias lla='ll -a'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Arch Linux
alias ch='sudo pacman -Sy $(pacman -Qq | grep headers) --needed --noconfirm && yaourt -Sua --noconfirm'
