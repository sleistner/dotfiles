[user]
	name = Steffen Leistner
	email = sleistner@gmail.com

[color]
    branch = auto
    diff   = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old  = red bold
    new  = green bold

[color "status"]
    added     = yellow
    changed   = green
    untracked = cyan

[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

[core]
	excludesfile = /Users/sleistner/.gitignore_global
    editor = subl

[apply]
    whitespace = nowarn

[pull]
    default = tracking

[push]
    default = tracking

[branch]
    autosetuprebase = remote

[merge]
	tool = sublime

[mergetool]
    keepbackup = false
    keeptemporaries = false
    trustexitcode = false

[pretty "shortd"]
    format = "%Cred%h%Creset - %C(green) %an %C(reset) - %C(yellow)%d%Creset %s %Cgreen(%cr) %Creset"

[tig]
    line-graphics = "utf-8"
    show-date = relative
    author-width = 20
    show-rev-graph = yes

[mergetool "sublime"]
	cmd = subl -w $MERGED
	trustExitCode = false
