# vim:syntax=sh

alias brew-update-outdated='brew outdated | xargs brew install -f'

COREUTILS_PATH=/usr/local/Cellar/coreutils
if [ -d COREUTILS_PATH ]; then
    source $COREUTILS_PATH/$(ls -t $COREUTILS_PATH | head -n1)/aliases
fi

alias l='ls --color -C -F'
alias ll='l -lh'
alias la='l -a'
alias l1='ls -1'
alias lla='ll -a'

# Subversion
alias sdel='svn-force-delete'
alias sad='svn add --force .'
alias cmate='mate `svn status | grep ^C | awk "{print $2}"`'
alias cvim='mvim -p `sst | grep ^C | awk "{print $2}"`'

# Textmate
alias et='mate . &'
alias ett='mate app config lib db public test &'

# Ack
if [ ! -x ack ];then
    alias ack='ack-grep'
fi

alias a='ack --ignore-dir=build --ignore-dir=dist'

for extension in 'css' 'html' 'ruby' 'rake' 'js'; do
    eval "alias a$extension='a --$extension'"
done

for extension in 'jade'; do
    eval "alias a$extension='a --type-add TYPE=.$extension'"
done

# Palm
alias p='novacom -t open tty://'

# Fast Ri
alias fri='fri -L'

# spec
alias spec='spec -c'
