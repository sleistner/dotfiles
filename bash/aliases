# vim:syntax=sh

# Homebrew
#for i in /usr/local/bin/*; do
    #alias `basename $i`=$i
#done
alias brew-update-outdated='brew outdated | xargs brew install -f'

if [ -x /usr/local/bin/ls ] ; then
    alias l='ls --color -C -F'
else
    alias l='ls -CF'
fi
alias ll='l -lh'
alias la='l -a'
alias l1='ls -1'
alias lla='ll -a'

# Rails
alias kl='killall -9 ruby'
alias log_db='tail -F log/development_database.log | egrep -v "(CACHE|SHOW FIELDS)"'

# Rake
alias mig='rake db:migrate'

# Subversion
alias sup='svn update'
alias sst='svn status'
alias sdel='svn-force-delete'
alias sad='svn add --force .'
alias cmate='mate `svn status | grep ^C | awk "{print $2}"`'
alias cvim='mvim -p `sst | grep ^C | awk "{print $2}"`'

# Textmate
alias et='mate . &'
alias ett='mate app config lib db public test &'

# Ack
for ext in '' 'css' 'html' 'ruby' 'rake' 'js'; do
    eval "alias a$ext='ack --ignore-dir=build --ignore-dir=dist --$ext'"
done

# Palm
alias p='novacom -t open tty://'

# Fast Ri
alias fri='fri -L'

# spec
alias spec='spec -c'
