# vim:syntax=sh

echo $PATH | grep -q -s "/usr/local/bin"
if [ $? -eq 1 ] ; then
  PATH=$PATH:/usr/local/bin
  export PATH
fi

PATH=/usr/local/bin:/usr/local/sbin:$PATH
PATH=$HOME/.bin:$PATH
PATH=$PATH:/Developer/SDKs/AIR
PATH=$PATH:/Developer/SDKs/Flex
PATH=$PATH:/Developer/SDKs/Android/Current/tools
export PATH

# Ruby Version Manager
if [[ -s $HOME/.rvm/scripts/rvm ]]; then
    source $HOME/.rvm/scripts/rvm
fi

export EDITOR=vim
export LANG=C



